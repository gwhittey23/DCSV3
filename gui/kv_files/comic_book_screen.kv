#:import win kivy.core.window.Window
<ComicBookScreen>:
    carousel_id: None
    max_height:self.max_height
    size: root.size
    name: 'comic_book_screen'
    FloatLayout:
        size: root.size
        id: comic_screen_float
        ComicCarousel:
            id: comic_book_carousel
    #top control taps
        ControlButton:
            id: top_left
            location: 'top_left'
            pos_hint: {'x': .0000000001, 'y': .85}
            text: "Top Left"
            size_hint: .2, .20
            opacity: 0
            on_release: self.click()
        ControlButton:
            id: top_center
            location: 'top_center'
            pos_hint: {'x': .3, 'y': .85}
            text: 'Top Center'
            size_hint: .4, .20
            opacity: 0
            on_release: self.click()
        ControlButton:
            id: top_right
            location: 'top_right'
            pos_hint: {'x': .8, 'y': .85}
            text: "Top Right"
            size_hint: .2, .20
            opacity: 0
            on_release: self.click()
    #middle control taps
        ControlButton:
            id: middle_left
            location: 'middle_left'
            pos_hint: {'x': .0000000001, 'y': .5}
            text: "Middle Left"
            size_hint: .12, .1
            opacity: 0
            on_release: self.click()
        ControlButton:
            id: middle_center
            location: 'middle_center'
            pos_hint: {'x': .4, 'y': .5}
            text: 'Middle Center'
            size_hint: .2, .20
            opacity: 0
            on_release: self.click()
        ControlButton:
            id: middle_right
            location: 'middle_right'
            pos_hint: {'x': .9, 'y': .5}
            text: "Middle Right"
            size_hint: .12, .10
            opacity: 0
            on_release: self.click()

    #bottom control taps
        ControlButton:
            id: bottom_left
            location: 'bottom_left'
            pos_hint: {'x': .0000000001, 'y': .0001}
            text: "Bottom Left"
            size_hint: .2, .2
            opacity: 0
            on_release: self.click()

        ControlButton:
            id: bottom_center
            location:'bottom_center'
            pos_hint: {'x': .3, 'y': .0001}
            text: 'Botttom Center'
            size_hint: .4, .2
            opacity: 0
            on_release: self.click()

        ControlButton:
            id: bottom_right
            location: 'bottom_right'
            pos_hint: {'x': .8, 'y': .0001}
            text: "Bottom Right"
            size_hint: .2, .2
            opacity: 0
            on_release: self.click()







        ControlButton:
            pos_hint: {'x': .6, 'y': .6}
            text: 'Open Random'
            size_hint: .1, .1

            on_release: root.load_random_comic()


