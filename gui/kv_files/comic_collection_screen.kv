<ComicCollectionScreen>:
    name: 'comic_collection_screen'
    toolbar: 		_toolbar
    nav: 			_nav
    m_scroll:       _scroll

    EntitieScreenNavigationDrawer:
        id: 				_nav
        side:				'left'
        anim_type: 'slide_above_simple'
        ScrollView:
            do_scroll_x:	False
            size_hint_y:	None
            height:			root.height - _toolbar.height

            MaterialList:
                tile_rows:					2
                list_type:					'icon_text'
                list_data:					root.tile_icon_data
                allow_empty_selection:		False
                text_color_selected:		app.theme_cls.primary_dark
                background_color_selected:	(1, 1, 1, 0)
                divider_color:				app.theme_cls.divider_color()
                size_hint:					1, None
                height:						dp(340)
        RelativeLayout:
            orientation:            'vertical'
            id:                     rl1
            Toolbar:
                id: _toolbar
                title:				    "D.C.S Comic Collection Screen " + app.version
                title_theme_style:	    'Dark'
                icons_theme_style:	    'Dark'
                elevation:			    6
                pos_hint:			    {'x': 0, 'top': 1}

            FloatLayout:
                pos_hint:			    {'x': .0001,'top': .88}
                size_hint:              1,1
                id:                     fl1
                Image:
                    source:'gui/theme_engine/images/shelf.png'
                    # self here refers to the widget i.e BoxLayout
                    pos: self.pos
                    allow_stretch: True
                    keep_ratio: False
                    width:root.width
                    size_hint:None,None
                    height:root.height-(_toolbar.height)
                ScrollView:
                    id:                 _scroll
                    size_hint:          (.99,.9)
                    do_scroll_y:        True
                    do_scroll_x:        False
                    pos_hint:           {'x': .025, 'center_y': .57}
            RaisedButton:
                size_hint:			None, None
                size:				dp(250), dp(36)
                pos_hint:			{'x': 0.001, 'top': .942}
                elevation_normal:	2
                theme_style:		'Dark'
                disabled:			False
                text:               "Add This Collection To Favorites"
                on_release:         root.add_collection()






<CollctionAddPopUp@Popup>:
    textfield_name:    _textfield_name
    err_lbl:           _error_label
    hint_text: ''
    size_hint:(.8,.3)
    pos_hint:{'center_x':.5,'center_y':.5}
    title: 'Enter in info for this collection'
    GridLayout:
        rows: 3
        cols:1
        size_hint:(1,1)
        SingleLineTextField:
            id:					_textfield_name
            hint_text:			root.hint_text
            size_hint:			0.8, None
            height:				dp(48)
            pos_hint:			{'center_x': .5, 'center_y': .5}
            theme_style:		'Light'
            foreground_color:  (1,1,1,1)
        RaisedButton:
            size_hint:			None, None
            size:				dp(130), dp(36)
            pos_hint:			{'x': 0.3, 'top': .94}
            elevation_normal:	2
            theme_style:		'Dark'
            disabled:			False
            text:               "Submit"
            on_release:         root.submit_fav()
        MaterialLabel:
            text:				""
            id:                 _error_label
            font_style:			'Body1'
            size_hint:			None, None
            width:				dp(100)
            height:				dp(40)
            text_size:			self.size
            halign:				'center'
            valign:				'middle'











