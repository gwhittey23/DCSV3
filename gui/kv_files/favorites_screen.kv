<FavoritesScreen>:
    id:     favorites_screen
    name: 'favorites_screen'
    toolbar: 		_toolbar
    nav: 			_nav
    main:           _main
    scroll:         _favscroll
    edit_switch:      _edit_switch
    FavoritesScreenNavigationDrawer:
        id: 				_nav
        side:				'left'
        anim_type: 'slide_above_simple'
        ScrollView:
            do_scroll_x:	False
            size_hint_y:	None
            height:			root.height - _toolbar.height
            MaterialList:
                tile_rows:					2
                list_type:					'icon_text'
                list_data:					root.tile_icon_data
                allow_empty_selection:		False
                text_color_selected:		app.theme_cls.primary_dark
                background_color_selected:	(1, 1, 1, 0)
                divider_color:				app.theme_cls.divider_color()
                size_hint:					1, None
                height:						'340dp'
        RelativeLayout:
            id:                     _main
            orientation:            'vertical'
            Toolbar:
                id: _toolbar
                title:				"D.C.S Favroites Screen " + app.version
                title_theme_style:	'Dark'
                icons_theme_style:	'Dark'
                elevation:			6
                pos_hint:			{'x': 0, 'top': 1}
            BoxLayout:
                pos_hint:			{'x':.1,'y':.89}
                size_hint: .3,None
                height: '78dp'
                Label:
                    text: 'Edit Mode'
                Switch:
                    id: _edit_switch

            ScrollView:
                id:                 _favscroll
                size_hint:          (1,.6)
                do_scroll_y:        True
                do_scroll_x:        False
                pos_hint:           {'x':.01,'y':.01}


<FavroitesInnerGrid>:
    cols: 1
    rows: 2
    size_hint: (None,None)
    size: ('97.5dp','150dp')
    spacing: 5


<FavroitesCoverImage@Widget>:
    allow_stretch: False
    size: ('97.5dp','150dp')
    size_hint: (None, None)


<FavroitesLabel>:
    font_style:			'Body1'
    size_hint:			None, None
    font_size:          '8sp'
    height:				self.texture_size[1]
    text_size:			self.width, None
    halign:				'center'
    text_color: (0,0,0)
    background_color: (1,1,1,.5)

<FavoritesTrash@Widget>:
    size_hint: None, None
    size: '60dp','60dp'
    pos_hint:			{'x': .008, 'bottom': .85}
    Image:
        size_hint: None, None
        size: ('97.5dp','150dp')
        source: 'gui/theme_engine/images/trash.png'
        pos: root.x,root.y



<SelectedFavoritesFolder@Widget>:
    size_hint: None, None
    size: '60dp','60dp'
    pos_hint:			{'x': .008, 'top': .85}
    Image:
        size: '60dp','60dp'
        source: 'atlas://data/images/defaulttheme/filechooser_selected'
        pos: root.x,root.y
    Label:
        text: ''
        halign: 'center'
        size: '16dp', '16dp'
        pos: root.center_x - self.width / 2, root.y - self.height


<FavoritesCollection>:
    size_hint: None, None
    size: '60dp','60dp'
    pos_hint:			{'x': .008, 'top': .85}
    _text: self._text
    Image:
        size: '60dp','60dp'
        source: 'gui/theme_engine/images/comic_folders/misc_comic_folder.png'
        pos: root.x,root.y
    Label:
        text: root._text
        id: fav_col_lbl
        font_size:'11sp'
        halign: 'center'
        size: '16dp', '16dp'
        pos: root.center_x - self.width / 2, root.y - self.height


<FavoritesFolder@Widget>:
    size_hint: None, None
    size: '60dp','60dp'
    pos_hint:			{'x': .008, 'top': .85}
    Image:
        size: '60dp','60dp'
        source: 'atlas://data/images/defaulttheme/filechooser_folder'
        pos: root.x,root.y
    Label:
        text: 'Test'
        halign: 'center'
        size: '16dp', '16dp'
        pos: root.center_x - self.width / 2, root.y - self.height

<FavItemBubbleMenu>:
    orientation: 'vertical'
    background_image: 'atlas://data/images/defaulttheme/button_pressed'

    background_color: .2, .9, 1, 1
    size_hint: (None, None)
    size: (dp(100),dp(154))

    CommonComicsBubbleButton:
        text: 'Copy Item'
        on_release:root.copy_item()
    CommonComicsBubbleButton:
        text: 'Move Item'
        on_release:root.move_item()
    CommonComicsBubbleButton:
        text: 'Delete Item'
        on_release:root.delete_item()
    CommonComicsBubbleButton:
        text: 'Close Menu'
        on_release:root.close_me()

<FavCollectionBubleMenu>:
    orientation: 'vertical'
    background_image: 'atlas://data/images/defaulttheme/button_pressed'
    background_color: .2, .9, 1, 1
    size_hint: (None, None)
    size: (dp(60),dp(60))
    CommonComicsBubbleButton:
        text: 'Rename Collection'
        on_release:root.rename_collection()
    CommonComicsBubbleButton:
        text: 'Delete Collection'
        on_release:root.delete_collection()
    CommonComicsBubbleButton:
        text: 'Close Menu'
        on_release:root.close_me()

<FavoritesBubbleButton>:
    font_size: '10sp'
    background_color:self.background_color_disabled if self.disabled else (self.background_color if self.state == 'normal' else self.background_color_down)
    background_down: ''
    background_normal: ''

<CollctionRenamePopUp@Popup>:
    textfield_name:    _textfield_name
    _text:              self._text
    err_lbl:           _error_label
    hint_text: ''
    size_hint:(.8,.3)
    pos_hint:{'center_x':.5,'center_y':.5}
    title: 'Enter in info for this collection'
    GridLayout:
        rows: 3
        cols:1
        size_hint:(1,1)
        SingleLineTextField:
            id:					_textfield_name
            hint_text:			root.hint_text
            text:               root._text
            size_hint:			0.8, None
            height:				dp(48)
            pos_hint:			{'center_x': .5, 'center_y': .5}
            theme_style:		'Light'
            foreground_color:  (1,1,1,1)
        RaisedButton:
            size_hint:			None, None
            size:				dp(130), dp(36)
            pos_hint:			{'x': 0.3, 'top': .94}
            elevation_normal:	2
            theme_style:		'Dark'
            disabled:			False
            text:               "Submit"
            on_release:         root.rename_collection()
        MaterialLabel:
            text:				""
            id:                 _error_label
            font_style:			'Body1'
            size_hint:			None, None
            width:				dp(100)
            height:				dp(40)
            text_size:			self.size
            halign:				'center'
            valign:				'middle'

<CopyMoveItemPopup@Popup>:

    size_hint:(.8,.3)
    pos_hint:{'center_x':.5,'center_y':.5}
    title: 'Enter in info for this collection'
