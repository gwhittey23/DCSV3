<EntitiesScreen>:
    name: 'entities_screen'
    toolbar: 		_toolbar
    nav: 			_nav
    EntitieScreenNavigationDrawer:
        id: 				_nav
        side:				'left'
        anim_type: 'slide_above_simple'
        ScrollView:
            do_scroll_x:	False
            size_hint_y:	None
            height:			root.height - _toolbar.height

            MaterialList:
                tile_rows:					2
                list_type:					'icon_text'
                list_data:					root.tile_icon_data
                allow_empty_selection:		False
                text_color_selected:		app.theme_cls.primary_dark
                background_color_selected:	(1, 1, 1, 0)
                divider_color:				app.theme_cls.divider_color()
                size_hint:					1, None
                height:						dp(340)
        RelativeLayout:
            orientation:            'vertical'
            Toolbar:
                id: _toolbar
                title:				"D.C.S Home Screen " + app.version
                title_theme_style:	'Dark'
                icons_theme_style:	'Dark'
                elevation:			6
                pos_hint:			{'x': 0, 'top': 1}
            MaterialList:
                id:                         entities_location
                title:						"Entities Root"
                tile_rows:					2
                list_type:					'text'
                list_data:					root.entities_data
                allow_empty_selection:		False
                text_color_selected:		app.theme_cls.primary_light
                background_color_selected:	(1, 1, 1, 0)
                size_hint:					1, .9
                height:						dp(200)
                pos_hint:					{'x': 0.001, 'top': .9}
            RaisedButton:
                size_hint:			None, None
                size:				dp(130), dp(36)
                pos_hint:			{'x': 0.01, 'top': .94}
                elevation_normal:	2
                theme_style:		'Dark'
                disabled:			False
                text:               "Go to Root"
                on_release:         root.go_to_root()
            RaisedButton:
                size_hint:			None, None
                size:				dp(130), dp(36)
                pos_hint:			{'x':.234, 'top': .94}
                elevation_normal:	2
                theme_style:		'Dark'
                disabled:			False
                text:               "Up Level"
                on_release:         root.go_up_level()
            StackLayout:
                id:                 letter_bnt_stack
                pos_hint:			{'x':.46, 'top': .94}
                RaisedButton:
                    size_hint:			None, None
                    size:				dp(20), dp(36)

                    elevation_normal:	2
                    theme_style:		'Dark'
                    disabled:			False
                    text:               "A"
                    on_release:         root.go_up_level()
<EntitieItemButton>:
    size_hint:			None, None
    size:				dp(130), dp(36)
    pos_hint:			{'x': 0.001, 'top': .94}
    elevation_normal:	2
    theme_style:		'Dark'
    disabled:			False
    text:               "Series List"
    on_release:         self.load_series()

