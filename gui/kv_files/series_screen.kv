# -*- coding: utf-8 -*-
<SeriesScreen>:
    name: 'series_screen'
    toolbar: 		_toolbar
    nav: 			_nav
    textfield:		_textfield
    SeriesScreenNavigationDrawer:
        id: 				_nav
        side:				'left'
        anim_type: 'slide_above_simple'
        ScrollView:
            do_scroll_x:	False
            size_hint_y:	None
            height:			root.height - _toolbar.height

            MaterialList:
                tile_rows:					2
                list_type:					'icon_text'
                list_data:					root.tile_icon_data
                allow_empty_selection:		False
                text_color_selected:		app.theme_cls.primary_dark
                background_color_selected:	(1, 1, 1, 0)
                divider_color:				app.theme_cls.divider_color()
                size_hint:					1, None
                height:						dp(340)
        RelativeLayout:
            orientation:            'vertical'
            Toolbar:
                id: _toolbar
                title:				"D.C.S Home Screen " + app.version
                title_theme_style:	'Dark'
                icons_theme_style:	'Dark'
                elevation:			6
                pos_hint:			{'x': 0, 'top': 1}
            ScrollView:
                id: series_buttons_scroll
                size_hint: (1,.8)
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    id: series_buttons_grid
                    pos_hint:           {'x': 0.001, 'top': .94}
            SingleLineTextField:
                id:					_textfield
                hint_text:			"A single line TextField"
                size_hint:			0.8, None
                height:				dp(48)
                pos_hint:			{'x': 0.001, 'top': .64}
                bold:		        True


<SeriesItemButton>:
    size_hint:			None, None
    size:				dp(130), dp(36)
    pos_hint:			{'x': 0.001, 'top': .94}
    elevation_normal:	2
    theme_style:		'Dark'
    disabled:			False
    text:               "Series List"
    on_release:         self.load_series()


