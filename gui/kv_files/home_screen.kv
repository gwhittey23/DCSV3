<HomeScreen>:
    name: 'home_screen'
    toolbar: 		_toolbar
    nav: 			_nav
    textfield:		_textfield
    HomeScreeNavigationDrawer:
        id: 				_nav
        side:				'left'
        anim_type: 'slide_above_simple'
        ScrollView:
            do_scroll_x:	False
            size_hint_y:	None
            height:			root.height - _toolbar.height

            MaterialList:
                tile_rows:					2
                list_type:					'icon_text'
                list_data:					root.tile_icon_data
                allow_empty_selection:		False
                text_color_selected:		app.theme_cls.primary_dark
                background_color_selected:	(1, 1, 1, 0)
                divider_color:				app.theme_cls.divider_color()
                size_hint:					1, None
                height:						dp(340)
        RelativeLayout:
            orientation:            'vertical'
            Toolbar:
                id: _toolbar
                title:				"D.C.S Home Screen " + app.version
                title_theme_style:	'Dark'
                icons_theme_style:	'Dark'
                elevation:			6
                pos_hint:			{'x': 0, 'top': 1}
            SingleLineTextField:
                id:					_textfield
                hint_text:			"A single line TextField"
                size_hint:			0.8, None
                height:				dp(48)
                pos_hint:			{'x': 0.001, 'top': .64}
                bold:		        True
#            MaterialList:
#                title:						"Searches"
#                tile_rows:					2
#                list_type:					'icon_text'
#                list_data:					root.tile_link_data
#                allow_empty_selection:		False
#                text_color_selected:		app.theme_cls.primary_dark
#                background_color_selected:	(1, 1, 1, 0)
#                size_hint:					0.8, None
#                height:						dp(300)
#                pos_hint:					{'x': 0.001, 'top': .9}
            RaisedButton:
                size_hint:			None, None
                size:				dp(130), dp(36)
                pos_hint:			{'x': 0.001, 'top': .94}
                elevation_normal:	2
                theme_style:		'Dark'
                disabled:			False
                text:               "Series List"
                on_release:         root.show_popup_list_view()


##
#            RaisedButton:
#                size_hint:			None, None
#                size:				dp(130), dp(36)
#                pos_hint:			{'x': 0.001, 'top': .94}
#                elevation_normal:	2
#                theme_style:		'Dark'
#                disabled:			False
#                text:               "Series List"
#                on_release:         app.root.load_comic_shelf_screen('Series')

            RelativeLayout:
#                pos_hint:			{'x': 0.00001, 'y': 0.1}
                size_hint: 1,.3
                MaterialLabel:
                    text:				"Most Recent Additions"
                    font_style:			'Body1'
                    size_hint:			None, None
                    width:				dp(200)
                    height:				dp(40)
                    text_size:			self.size
                    halign:				'center'
                    valign:				'middle'
                    pos_hint:			{'center_x': .2, 'center_y': 0.89}
                MaterialList:
                    title:						" "
                    tile_rows:					2
                    allow_empty_selection:		False
                    text_color_selected:		app.theme_cls.primary_dark
                    background_color_selected:	(1, 1, 1, 0)
                    size_hint:					0.8, None
                    height:						dp(300)
                    pos_hint:					{'center_x': 0.5, 'center_y': 0.35}
                RecentComicsScroll:
                    id: recent_comics_scroll
                    pos_hint: {'top': .8}






<RecentComicsScroll>:
    size_hint: (1,.8)
    do_scroll_x: True
    do_scroll_y: False


<RecentComicsOuterGrid>:
    rows: 1
    size_hint: (None,None)
    spacing: 5
    padding_horizontal: 5

<RecentComicsInnerGrid>:
    cols: 1
    rows: 2
    size_hint: (None,None)
    size: (130,200)
    spacing: 5


<RecentComicsPageImage>:
    allow_stretch: True
    size: (130,200)
    size_hint: (None, None)
<RecentComicsPagebntlbl>:
    font_style:			'Body1'
    size_hint:			None, None
    font_size:          12
    height:				self.texture_size[1]
    text_size:			self.width, None
    halign:				'center'

    text_color: (0,0,0)
    background_color: (1,1,1,.5)


